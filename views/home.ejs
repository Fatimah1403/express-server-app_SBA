    <style>
        :root {
            --primaryColor: #4032a8;
            --secondaryColor: #a89632;
            --whiteColor: #ffffff;
            --tintBlueColor: #33adff;
            --blackColor: #222222;
            --softBlueColor: #3296a8;
            --darkBlueColor: #2550BE;
            --silverColor: #C0C0C0;
            --greyColor: #f5f5f5;
            --yellowColor: #e6b800;
        }
    
        body {
            align-items: center;
            justify-content: center;
            background-image: url("/images/clothes_back.jpeg");
